<script>

let token = localStorage.getItem("token");
let linkDispositivosConectados = document.getElementById("linkDispositivosConectados");
let linkConsultarDatos = document.getElementById("linkConsultarDatos");
//manejador envio tokens

const manejadorSendToken = (ruta) => {
    try {
        if (token) {
            location.href = `${ruta}?token=${token}`
        } else {
            alert("no existe un token para continuar a la ruta.")
        }
        
    } catch (error) {
        alert("Error al intentar entrar a una ruta protegida, debe existir un token.");
    }

}
linkDispositivosConectados.addEventListener("click", (event) => {
    event.preventDefault();
    manejadorSendToken(linkDispositivosConectados.dataset.ruta);

});
linkConsultarDatos.addEventListener("click", (event) => {
    event.preventDefault();
    manejadorSendToken(linkConsultarDatos.dataset.ruta);
});



